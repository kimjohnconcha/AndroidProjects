<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.workingapp.CalcRelative"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >



    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:background="@drawable/input_border"
        android:padding="10dp"
        android:textSize="40sp"
        android:text=""/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="24dp"
        android:textSize="25sp"
        android:text="7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/button5"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/button5"
        android:textSize="25sp"
        android:text="8"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/button6"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/button6"
        android:textSize="25sp"
        android:text="9" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignTop="@+id/button7"
        android:textSize="25sp"
        android:text="/" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="4" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button6"
        android:layout_alignTop="@+id/button9"
        android:textSize="25sp"
        android:text="5" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignStart="@+id/button7"
        android:textSize="25sp"
        android:text="6" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignEnd="@+id/button8"
        android:layout_alignTop="@+id/button11"
        android:textSize="25sp"
        android:text="*" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button9"
        android:layout_below="@+id/button9"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="1" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignStart="@+id/button10"
        android:textSize="25sp"
        android:text="2" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button11"
        android:layout_alignTop="@+id/button14"
        android:textSize="25sp"
        android:text="3" />

    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button12"
        android:layout_alignTop="@+id/button15"
        android:textSize="25sp"
        android:text="-" />

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button13"
        android:layout_below="@+id/button13"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="0" />

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignStart="@+id/button14"
        android:textSize="25sp"
        android:text="." />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/button18"
        android:layout_alignStart="@+id/button15"
        android:textSize="25sp"
        android:text="=" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignEnd="@+id/button16"
        android:layout_alignTop="@+id/button19"
        android:textSize="25sp"
        android:text="+" />


</RelativeLayout>
